@using WorkControlPortal.Models
@model List<Projeler>
@{
    ViewBag.Title = "Proje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div style="margin-top:15px ">
        <a href="/Proje/ProjeEkle" class="btn btn-info">Proje Ekle</a>

    </div>
    <div style="margin-top:10px" class="col-md-8">
        <table style="margin-top: 10px" class="table" id="tbl1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Proje</th>
                    <th>İşlem</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var projeler in Model)
                {
                    <tr>
                        <td>
                            @projeler.Referans
                        </td>
                        <td>
                            @projeler.Aciklama
                        </td>
                        <td>
                            @Html.ActionLink("Sil", "ProjeSil", "Proje", new { projeId = projeler.Referans }, new { @class = "btn-sm btn-danger" })
                            @Html.ActionLink("Güncelle", "ProjeGetir", "Proje", new { projeId = projeler.Referans }, new { @class = "btn-sm btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

