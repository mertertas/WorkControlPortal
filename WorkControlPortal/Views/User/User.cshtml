@using WorkControlPortal.Models;
@model List<Kullanicilar>

@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div style="margin-top:10px">
        <a href="/User/UserEkle" class="btn btn-info">Kullanıcı Ekle</a>

    </div>
    <div style="margin-top:10px" class="col-md-8">
        <table style="margin-top: 10px" class="table" id="tbl1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kullanıcı</th>
                    <th>İşlem</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @user.Referans
                        </td>
                        <td>
                            @user.Isim
                        </td>
                        <td>
                            @Html.ActionLink("Sil", "UserSil", "User", new { userId = user.Referans }, new { @class = "btn-sm btn-danger" })
                            @Html.ActionLink("Güncelle", "UserGetir", "User", new { userId = user.Referans }, new { @class = "btn-sm btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
