@using WorkControlPortal.Models;
@model List<Departmanlar>
@{
    ViewBag.Title = "Departman";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div style="margin-top:10px">
        <a href="/Departman/DepartmanEkle" class="btn btn-info">DepartmanEkle</a>

    </div>
    <div class="col-md-8">
        <table style="margin-top: 10px" class="table" id="tbl1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Departman</th>
                    <th>İşlem</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var departmanlar in Model)
                {
                    <tr>
                        <td>
                            @departmanlar.Referans
                        </td>
                        <td>
                            @departmanlar.Departman
                        </td>
                        <td>
                            @Html.ActionLink("Sil", "DepartmanSil", "Departman", new { departmanId = departmanlar.Referans }, new { @class = "btn-sm btn-danger" })
                            @Html.ActionLink("Güncelle", "DepartmanGetir", "Departman", new { departmanId = departmanlar.Referans }, new { @class = "btn-sm btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
