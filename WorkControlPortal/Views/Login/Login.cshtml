
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Work Control</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/LoginTheme/css/style.css">

</head>
<body class="img js-fullheight" style="        background-image: url(/LoginTheme/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Work Control</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Hosgeldiniz</h3>
                        @using (Html.BeginForm("Login","Login",FormMethod.Post))
                        {
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="MailAdres" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" class="form-control" name="Sifre" placeholder="********" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni Hatırla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Şifremi Unuttum</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/LoginTheme/js/jquery.min.js"></script>
    <script src="~/LoginTheme/js/popper.js"></script>
    <script src="~/LoginTheme/js/bootstrap.min.js"></script>
    <script src="~/LoginTheme/js/main.js"></script>

</body>
</html>


