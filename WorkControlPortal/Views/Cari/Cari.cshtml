@model List<Cariler>
@{
    ViewBag.Title = "Cari";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div style="margin-top:10px">
        <a href="/Cari/CariEkle" class="btn btn-info">Cari Ekle</a>

    </div>
    <div class="row" style="margin-top:10px">
        <div class="col-md-10">
            <table id="tbl1" style="margin-top: 10px" class="table">
                <thead>
                    <tr style="color:white">
                        <th>#</th>
                        <th>Kod</th>
                        <th>Ünvan</th>
                        <th>İlgili</th>
                        <th>İşlem</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var cariler in Model)
                    {
                        <tr>
                            <td>
                                @cariler.Referans
                            </td>
                            <td>
                                @cariler.Kod
                            </td>
                            <td>
                                @cariler.Unvan
                            </td>
                            <td>
                                @cariler.Ilgili1
                            </td>
                            <td>
                                @Html.ActionLink("Sil", "CariSil", "Cari", new { cariId = cariler.Referans }, new { @class = "btn-sm btn-danger" })
                                @Html.ActionLink("Güncelle", "CariGetir", "Cari", new { cariId = cariler.Referans }, new { @class = "btn-sm btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


            @*@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Cari", new { sayfa }))*@
        </div>
    </div>
</div>
