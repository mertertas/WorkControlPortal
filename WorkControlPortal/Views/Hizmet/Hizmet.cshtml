@using WorkControlPortal.Models;
@model List<Hizmetler>
@{
    ViewBag.Title = "Hizmet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div style="margin-top:10px">
        <a href="/Hizmet/HizmetEkle" class="btn btn-info">Hizmet Ekle</a>

    </div>
    <div style="margin-top:10px" class="col-md-8">
        <table style="margin-top: 10px" class="table" id="tbl1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Hizmet</th>
                    <th>İşlem</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var hizmetler in Model)
                {
                    <tr>
                        <td>
                            @hizmetler.Referans
                        </td>
                        <td>
                            @hizmetler.Aciklama
                        </td>
                        <td>
                            @Html.ActionLink("Sil", "HizmetSil", "Hizmet", new { hizmetId = hizmetler.Referans }, new { @class = "btn-sm btn-danger" })
                            @Html.ActionLink("Güncelle", "HizmetGetir", "Hizmet", new { hizmetId = hizmetler.Referans }, new { @class = "btn-sm btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
